/* 作品列表 */
.work-list{
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx; 
  /* justify-content: space-between; */
  
}
.work-item{
  /* width: 48%; */
   margin-bottom: 30rpx; 
}
.work-img{
  position: relative;
}
.work-img image{
  width: 690rpx;
  height: 380rpx;
  border-radius: 30rpx;
}
.details{
  position: absolute;
  bottom: 10rpx;
  left:0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: blue;
  font-size: 40rpx;
}
.work-word{
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-indent: 2em;
  font-family: cursive;
  font-size: 40rpx;
}